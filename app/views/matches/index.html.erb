<div id="pillars" class="row">
  <div class="span3">
    <div id='ideasCol'>
      <h2 class="blue">Ideas</h2>
      <dl>
        <% @ideas.each do |idea| %>
        <dd class='image'><%= image_tag idea.photo.url(:thumb) %></dd>
        <dt><%= idea.name %></dt>
        <dd class='desc' style="margin-bottom:8px"><%= idea.description %>
          <%= link_to "more info", idea_path(idea) %>
        </dd>
        <% end %>
      </dl>

      <div class='downBtn'></div>
    </div>
    <%= render 'ideas/new_modal' %>
  </div>
  
  <div id='matchesCol' class="span4">
    <h2 class="purple" style="text-align:center">It's a match!</h2>
    <% @matches.each do |match| %>

    <div class='match <%= match.start_datetime < Date.today ? "old" : "" %>' style="margin-bottom:8px">
      <div class="calendar"> 
        <span class="month"><%= match.start_datetime.to_s(:month)%></span>
        <span class="day"><%= match.start_datetime.to_s(:day)%></span>
      </div>
      <dl>
        <dd class='eventName'><%= match.idea.name %></dd>
        <dd class='whereWhen'><%= match.idea.name %> &amp; <%= match.space.name %></dd>
        <dd><%= match.start_datetime.to_s(:long)%></dd>
      </dl>
    </div>
    <% end %>

    <div class='downBtn'></div>
  </div>

  <div class="span3">
    <div id="spacesCol">
      <h2 class="red" style="text-align:right">Spaces</h2>
      <dl>
        <% @spaces.each do |space| %>
          <dd class='image'><%= image_tag space.photo.url(:thumb) %></dd>
          <dt><%= space.name %></dt>
          <dd class='desc'><%= space.description %></dd>
        <% end %>
      </dl>
      <div class='downBtn'></div>
    </div>
  <%= render 'spaces/new_modal' %>
  </div>

</div>


